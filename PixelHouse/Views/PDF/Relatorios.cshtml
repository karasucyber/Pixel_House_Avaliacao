@{
    ViewData["Title"] = "Relatórios";
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f8f9fa;
        }

        h1 {
            color: #343a40;
            text-align: center;
            margin-bottom: 30px;
            font-weight: bold;
        }

        p {
            color: #6c757d;
            text-align: center;
            margin-bottom: 40px;
            font-size: 1.2rem;
        }

        .btn {
            display: block;
            width: 100%;
            padding: 15px;
            margin-bottom: 20px;
            background-color: #007bff;
            border-color: #007bff;
            color: white;
            font-size: 1.1rem;
            text-transform: uppercase;
            letter-spacing: 1px;
            transition: background-color 0.3s ease;
        }

        .btn:hover {
            background-color: #0056b3;
            border-color: #004085;
        }

        .container {
            max-width: 700px;
            margin: 50px auto;
            padding: 20px;
            background-color: #ffffff;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
        }

        .btn-primary {
            border-radius: 5px;
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <h1>@ViewData["Title"]</h1>

        <p>Aqui você poderá visualizar os relatórios gerados pelo sistema.</p>

        <div class="mb-3">
            <a href="@Url.Action("ProdutosEmEstoque", "Pdf")" class="btn btn-primary">
                Gerar Relatório de Produtos em Estoque
            </a>
        </div>

        <div class="mb-3">
            <a href="@Url.Action("ProdutosMaisVendidos", "Pdf")" class="btn btn-primary">
                Gerar Relatório de Produtos Mais Vendidos
            </a>
        </div>

        <div class="mb-3">
            <a href="@Url.Action("ProdutosMaisComprados", "Pdf")" class="btn btn-primary">
                Gerar Relatório de Produtos Mais Reabastecidos
            </a>
        </div>

        <div class="mb-3">
            <a href="@Url.Action("ProdutosComEstoqueBaixo", "Pdf")" class="btn btn-primary">
                Gerar Relatório de Produtos com Estoque Baixo
            </a>
        </div>

        <div class="mb-3">
            <a href="@Url.Action("ProdutosComPoucasVendas", "Pdf")" class="btn btn-primary">
                Gerar Relatório de Produtos com Poucas Vendas
            </a>
        </div>
    </div>
</body>
</html>
