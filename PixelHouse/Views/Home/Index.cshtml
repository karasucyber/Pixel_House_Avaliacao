@model PixelHouse.Models.Produto

@{
    ViewData["Title"] = "Create Produto";
}

<h1>Criar Produto</h1>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Nome" class="control-label"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Descricao" class="control-label"></label>
        <input asp-for="Descricao" class="form-control" />
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Preco" class="control-label"></label>
        <input asp-for="Preco" class="form-control" />
        <span asp-validation-for="Preco" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="QuantidadeEmEstoque" class="control-label"></label>
        <input asp-for="QuantidadeEmEstoque" class="form-control" />
        <span asp-validation-for="QuantidadeEmEstoque" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EstoqueMinimo" class="control-label"></label>
        <input asp-for="EstoqueMinimo" class="form-control" />
        <span asp-validation-for="EstoqueMinimo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Unidade" class="control-label"></label>
        <input asp-for="Unidade" class="form-control" />
        <span asp-validation-for="Unidade" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ICMS" class="control-label"></label>
        <input asp-for="ICMS" class="form-control" />
        <span asp-validation-for="ICMS" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CFOP" class="control-label"></label>
        <input asp-for="CFOP" class="form-control" />
        <span asp-validation-for="CFOP" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DataEntrada" class="control-label"></label>
        <input asp-for="DataEntrada" class="form-control" type="date" />
        <span asp-validation-for="DataEntrada" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DataSaida" class="control-label"></label>
        <input asp-for="DataSaida" class="form-control" type="date" />
        <span asp-validation-for="DataSaida" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DataAlteracao" class="control-label"></label>
        <input asp-for="DataAlteracao" class="form-control" type="date" />
        <span asp-validation-for="DataAlteracao" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FornecedorPreferencial" class="control-label"></label>
        <input asp-for="FornecedorPreferencial" class="form-control" />
        <span asp-validation-for="FornecedorPreferencial" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>
